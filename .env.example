# ===================================
# Configurações do Ambiente
# ===================================

# Configurações da Aplicação
# --------------------------
FLASK_APP=wsgi:app
FLASK_ENV=development
SECRET_KEY=change-this-to-a-secure-secret-key

# Configurações de Log
LOG_LEVEL=INFO

# Configurações CORS
CORS_ORIGINS=*

# ===================================
# Configurações do Banco de Dados
# ===================================

# PostgreSQL Principal
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change-this-password
POSTGRES_DB=taskmanager
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Para desenvolvimento local
DEV_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/taskmanager_dev

# ===================================
# Configurações de Autenticação JWT
# ===================================
JWT_SECRET_KEY=change-this-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hora em segundos
JWT_REFRESH_TOKEN_EXPIRES=2592000  # 30 dias em segundos
SECURITY_PASSWORD_SALT=change-this-password-salt

# ===================================
# Configurações do Redis
# ===================================
REDIS_PASSWORD=change-this-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# ===================================
# Configurações de Rate Limiting
# ===================================
RATELIMIT_DEFAULT=200 per day
RATELIMIT_STORAGE_URL=redis://:${REDIS_PASSWORD}@redis:6379/1

# ===================================
# Configurações de E-mail
# ===================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-app-password
MAIL_DEFAULT_SENDER=your-email@gmail.com

# ===================================
# Configurações do Gitea
# ===================================
GITEA_DB_NAME=gitea
GITEA_DB_USER=gitea
GITEA_DB_PASSWORD=change-this-gitea-db-password
GITEA_DOMAIN=localhost
GITEA_SSH_DOMAIN=localhost
GITEA_SECRET_KEY=change-this-gitea-secret-key
GITEA_INTERNAL_TOKEN=change-this-gitea-internal-token

# ===================================
# Configurações do pgAdmin
# ===================================
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=change-this-pgadmin-password

# ===================================
# Configurações do Grafana
# ===================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-this-grafana-password

# ===================================
# Configurações do Traefik
# ===================================
TRAEFIK_ACME_EMAIL=your-email@example.com
DOMAIN=localhost

# ===================================
# Configurações de Upload
# ===================================
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# ===================================
# Configurações de Segurança
# ===================================
# Configurações de CORS para produção
# CORS_ORIGINS=https://your-frontend-domain.com,https://api.your-domain.com

# Configurações de SSL/TLS (para produção)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

# ===================================
# Configurações de Monitoramento
# ===================================
# Configurações do Sentry (opcional)
# SENTRY_DSN=your-sentry-dsn

# Configurações do New Relic (opcional)
# NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
# NEW_RELIC_APP_NAME=task-manager-api
